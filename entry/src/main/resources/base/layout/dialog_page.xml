<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:Dialogs"
        ohos:text_size="30fp"
        />
    <Button
        ohos:id="$+id:alert_dialog_button"
        ohos:height="50fp"
        ohos:width="250fp"
        ohos:background_element="$graphic:button_background"
        ohos:text="$string:alert"
        ohos:clickable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="50fp"
        ohos:text_size="50px"
        />
    <Button
        ohos:id="$+id:custom_dialog_button"
        ohos:height="50fp"
        ohos:width="250fp"
        ohos:background_element="$graphic:button_background"
        ohos:text="$string:CustomDialog"
        ohos:clickable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="50fp"
        ohos:text_size="50px"
        />
    <Button
        ohos:id="$+id:popup_dialog_button"
        ohos:height="50fp"
        ohos:width="250fp"
        ohos:background_element="$graphic:button_background"
        ohos:text="$string:PopUpDialog"
        ohos:clickable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="50fp"
        ohos:text_size="50px"
        />
</DirectionalLayout>